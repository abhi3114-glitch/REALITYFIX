# RealityFix Environment Variables
# Copy this file to .env and fill in your values

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=http://localhost:8000

# Database
DATABASE_URL=sqlite:///realityfix.db
# For PostgreSQL: postgresql://user:password@localhost/realityfix

# ML Models
MODEL_CACHE_DIR=./models
USE_GPU=false

# Evidence Retrieval (Optional - for production)
BING_API_KEY=your_bing_api_key_here
GOOGLE_CUSTOM_SEARCH_API_KEY=your_google_api_key_here
GOOGLE_CUSTOM_SEARCH_ENGINE_ID=your_search_engine_id_here
NEWS_API_KEY=your_news_api_key_here

# Caching (Optional - for production)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Security (Production)
SECRET_KEY=your_secret_key_here_change_in_production
API_KEY=your_api_key_here
ALLOWED_ORIGINS=https://yourdomain.com,chrome-extension://your-extension-id

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/realityfix.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10
RATE_LIMIT_PER_HOUR=100

# External Services
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ID=your_analytics_id_here